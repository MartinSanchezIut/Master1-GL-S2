<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idNom"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:hint="Nom"
        app:layout_constraintBottom_toTopOf="@+id/idPrenom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/idPrenom"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:hint="Prenom"
        app:layout_constraintBottom_toTopOf="@+id/idage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/idage"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:hint="Age"
        app:layout_constraintBottom_toTopOf="@+id/idnum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/idnum"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:hint="NumÃ©ro"
        app:layout_constraintBottom_toTopOf="@+id/idmdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.978"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/idmdp"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:hint="Mots de passe"
        app:layout_constraintBottom_toTopOf="@+id/idsoumettre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.915"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/idsoumettre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soumettre"
        app:layout_constraintBottom_toTopOf="@+id/idplanning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931" />

    <Button
        android:id="@+id/idplanning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficher plannning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865" />

</androidx.constraintlayout.widget.ConstraintLayout>